	int kenar1,kenar2,cevre,alan;
	printf("******Dikdortgen Cevre Hesabi*******\n \n \n");
	
	printf("1.kenari giriniz: \n");
	scanf("%d",&kenar1);
	printf("Kisa kenar: %d \n",kenar1);
	
	printf("2.kenari giriniz: \n");
	scanf("%d",&kenar2);
	printf("Uzun kenar: %d \n",kenar2);
	
