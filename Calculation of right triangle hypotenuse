#include<stdio.h>
#include<conio.h>
#include<math.h>
#include<locale.h>


int main ()
{
  int kenar1,kenar2,hipo;
  	setlocale(LC_ALL,"Turkish");
	printf("****Dik Ucgen Hipotenus Hesabi **** \n\n\n");
	printf("1.Kenari giriniz: \n");
	    scanf("%d",&kenar1);
	printf("Ucgenin 1. kenari : %d \n",kenar1);
	
	printf("2.Kenari giriniz:  \n");
	    scanf("%d",&kenar2);
	printf("Ucgenin 2.kenari : %d \n",kenar2);
	
	    hipo=sqrt((kenar1*kenar1)+(kenar2*kenar2));
	printf("Ucgenin hipotenusu: %d",hipo);
  
  getchar();
  getchar();
}
